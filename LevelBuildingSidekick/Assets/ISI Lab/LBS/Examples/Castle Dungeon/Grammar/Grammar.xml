<?xml version="1.0" encoding="utf-8"?>
<grammar xml:lang="es-CL" root="Quest" version="1.0" xmlns="http://www.w3.org/2001/06/grammar">
  <rule id="Quest">
    <one-of>
      <item>
        <ruleref uri="#Subquest" />
      </item>
      <item>
        <ruleref uri="#Goto" />
      </item>
      <item>
        <ruleref uri="#Learn" />
      </item>
      <item>
        <ruleref uri="#Get" />
      </item>
      <item>
        <ruleref uri="#Steal" />
      </item>
      <item>
        <ruleref uri="#Kill" />
      </item>
      <item>
        <ruleref uri="#Capture" />
      </item>
      <item>
        <ruleref uri="#Spy" />
      </item>
    </one-of>
  </rule>
  <rule id="Subquest">
    <one-of>
      <item>
        <ruleref uri="#Goto" />
      </item>
      <item>
        <ruleref uri="#Goto" />
        <ruleref uri="#Quest" />go to</item>
    </one-of>
  </rule>
  <rule id="Goto">
    <one-of>
      <item />
      <item>explore</item>
      <item>
        <ruleref uri="#Learn" />go to</item>
      <item>go to</item>
    </one-of>
  </rule>
  <rule id="Learn">
    <one-of>
      <item />
      <item>
        <ruleref uri="#Goto" />
        <ruleref uri="#Subquest" />listen</item>
      <item>
        <ruleref uri="#Goto" />
        <ruleref uri="#Get" />read</item>
      <item>
        <ruleref uri="#Get" />
        <ruleref uri="#Subquest" />give listen</item>
    </one-of>
  </rule>
  <rule id="Get">
    <one-of>
      <item />
      <item>
        <ruleref uri="#Steal" />
      </item>
      <item>
        <ruleref uri="#Goto" />gather</item>
      <item>
        <ruleref uri="#Goto" />
        <ruleref uri="#Get" />
        <ruleref uri="#Goto" />
        <ruleref uri="#Subquest" />exchange</item>
    </one-of>
  </rule>
  <rule id="Steal">
    <one-of>
      <item>
        <ruleref uri="#Goto" />stealth take</item>
      <item>
        <ruleref uri="#Goto" />
        <ruleref uri="#Kill" />take</item>
    </one-of>
  </rule>
  <rule id="Kill">
    <one-of>
      <item>
        <ruleref uri="#Goto" />kill</item>
    </one-of>
  </rule>
  <rule id="Capture">
    <one-of>
      <item>
        <ruleref uri="#Get" />
        <ruleref uri="#Goto" />capture</item>
    </one-of>
  </rule>
  <rule id="Spy">
    <one-of>
      <item>
        <ruleref uri="#Goto" />spy<ruleref uri="#Goto" />report</item>
    </one-of>
  </rule>
</grammar>